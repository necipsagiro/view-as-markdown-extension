{
  "manifest_version": 3,
  "name": "View as Markdown",
  "version": "1.1",
  "description": "View any page as Markdown via right-click menu",
  "browser_specific_settings": {
    "gecko": {
      "id": "view-as-markdown-parsers_frailer8k@icloud.com",
      "strict_min_version": "140.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["contextMenus"],
  "background": {
    "service_worker": "background.js",
    "scripts": ["background.js"]
  }
}
